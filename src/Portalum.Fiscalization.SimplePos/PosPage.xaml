<Page x:Class="Portalum.Fiscalization.SimplePos.PosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Portalum.Fiscalization.SimplePos"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PosPage">

    <Grid>
        <local:ArticleSelectorUserControl x:Name="ArticleSelector" Background="#FF98C011" Margin="0,0,275,0"/>
        <local:ShoppingCartUserControl x:Name="ShoppingCart" Background="#92a5b3" HorizontalAlignment="Right" Width="275"/>
    </Grid>
</Page>
